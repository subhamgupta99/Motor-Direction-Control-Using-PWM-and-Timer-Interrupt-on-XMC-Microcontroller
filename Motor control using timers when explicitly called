#include "DAVE.h"                 //Declarations from DAVE Code Generation (includes SFR declaration)

/**

 * @brief main() - Application entry point
 *
 * <b>Details of function</b><br>
 * This routine is the application entry point. It is invoked by the device startup code. It is responsible for
 * invoking the APP initialization dispatcher routine - DAVE_Init() and hosting the place-holder for user application
 * code.
 */

void startTimer(void);


volatile uint8_t motor_state = 0;
volatile bool isMotorStateChangedNeeded = false;

int main(void)
{
  DAVE_STATUS_t status;

  status = DAVE_Init();           /* Initialization of DAVE APPs  */


  if (status != DAVE_STATUS_SUCCESS)
  {
    /* Placeholder for error handler code. The while loop below can be replaced with an user error handler. */
    XMC_DEBUG("DAVE APPs initialization failed\n");

    while(1U)
    {

    }
  }

  PWM_Start(&PWM_0);

  /* Placeholder for user application code. The while loop below can be replaced with user application code. */
  while(1U)
  {

	  switch (motor_state) {
	  	  	  	  case 0:
	  	  	  		  PWM_SetDutyCycle(&PWM_0, 0);
	  	  	  		  startTimer();
	  	  	  		  break;

	              case 1: // Clockwise
	                  DIGITAL_IO_SetOutputHigh(&DIR);
	                  DIGITAL_IO_SetOutputHigh(&LED_1);
	                  DIGITAL_IO_SetOutputLow(&LED_2);
	                  PWM_SetDutyCycle(&PWM_0, 4000);
	                  startTimer();
	                  break;

	              case 2: // Stop before anti-clockwise
	                  PWM_SetDutyCycle(&PWM_0, 0);
	                  startTimer();
	                  break;

	              case 3: // Anti-clockwise
	                  DIGITAL_IO_SetOutputLow(&DIR);
	                  DIGITAL_IO_SetOutputHigh(&LED_2);
	                  DIGITAL_IO_SetOutputLow(&LED_1);
	                  PWM_SetDutyCycle(&PWM_0, 4000);
	                  startTimer();
	                  break;
	          }

  }
}

void Timer0Interval_ISR(void){
	//jump here when the timer0 ends its interval


	if(isMotorStateChangedNeeded)
	{
		motor_state = ((motor_state + 1) % 4);
		isMotorStateChangedNeeded = false;
		TIMER_Stop(&TIMER_0);
	}

}


void startTimer(void)
{
	if(!isMotorStateChangedNeeded)
	{
		isMotorStateChangedNeeded = true;
		TIMER_Start(&TIMER_0);
	}
}
